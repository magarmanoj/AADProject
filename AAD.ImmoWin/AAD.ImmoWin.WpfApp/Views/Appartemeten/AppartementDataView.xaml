<UserControl x:Class="AAD.ImmoWin.WpfApp.Views.AppartementDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AAD.ImmoWin.WpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="5">
                <Label Content="Verdieping:"></Label>
                <Label Content="Waarde:"></Label>
                <Label Content="Straat:"></Label>
                <Label Content="Nummer:"></Label>
                <Label Content="Postnummer:"></Label>
                <Label Content="Gemeente:"></Label>
                <Label Content="BouwDatum:"></Label>
                <Label Content="EigenaarVoornaam:"></Label>
                <Label Content="EigenaarFamilienaam:"></Label>
            </StackPanel>
            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
                <TextBox Text="{Binding Appartement.Verdieping, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Waarde, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Adres.Straat, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Adres.Nummer, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Adres.Postnummer, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Adres.Gemeente, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.BouwDatum, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.Klant.Voornaam, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                <TextBox Text="{Binding Appartement.BouwDatum, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
